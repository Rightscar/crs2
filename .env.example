# Fine-Tune Data Refinement & Review System - Environment Variables
# ================================================================

# REQUIRED: OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OPTIONAL: System Configuration
# Enable low memory mode for Render.com free tier (512MB)
LOW_MEM_MODE=1

# Enable debug mode for detailed logging
DEBUG_MODE=false

# OPTIONAL: Large File OCR Configuration
# Maximum file size for OCR processing (MB)
MAX_FILE_SIZE_MB=100

# Maximum pages per document
MAX_PAGES=200

# Timeout per page for OCR processing (seconds)
TIMEOUT_PER_PAGE=30

# Total timeout for entire document (seconds)
TOTAL_TIMEOUT=1800

# OPTIONAL: Performance Tuning
# Number of concurrent API calls for async processing
MAX_CONCURRENT_CALLS=5

# API rate limit (requests per minute)
API_RATE_LIMIT=60

# OPTIONAL: Quality Control
# Minimum semantic similarity threshold for tone consistency
MIN_SIMILARITY_THRESHOLD=0.7

# Enable hallucination detection
ENABLE_HALLUCINATION_DETECTION=true

# OPTIONAL: Export Configuration
# Maximum export file size (MB)
MAX_EXPORT_SIZE_MB=50

# Enable automatic ZIP compression for large exports
AUTO_ZIP_EXPORTS=true

# OPTIONAL: Session Management
# Auto-save interval (seconds)
AUTO_SAVE_INTERVAL=300

# Session timeout (seconds)
SESSION_TIMEOUT=3600

# OPTIONAL: Monitoring and Analytics
# Enable performance monitoring
ENABLE_MONITORING=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# OPTIONAL: Cloud Storage (if using external storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your_bucket_name

# OPTIONAL: HuggingFace Integration
# HUGGINGFACE_TOKEN=your_huggingface_token

# OPTIONAL: Custom Model Configuration
# CUSTOM_MODEL_NAME=gpt-4o-mini
# CUSTOM_MODEL_TEMPERATURE=0.7
# CUSTOM_MODEL_MAX_TOKENS=2000

# DEPLOYMENT SPECIFIC
# Set to 'render' for Render.com deployment
DEPLOYMENT_PLATFORM=render

# Render.com specific settings
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com

